<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, {:class =>"form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
    </div>
  
    <%= f.hidden_field :latitude, {:class =>"form-control"} %>
    <%= f.hidden_field :longitude, {:class =>"form-control"} %>

    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.datetime_select :start_date, {:class =>"form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 3, :class =>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :is_public %>
      <%= f.check_box :is_public %>
    </div>

    <div class="actions">
      <%= f.submit "Create Event", {:class => "btn btn-primary"} %>
      <%= link_to 'Back', events_path, {:class => "btn btn-default"} %>
    </div>
  </div>

  <div class="col-xs-6" id="map"></div>


<% end %>
