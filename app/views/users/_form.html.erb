    <%= f.label :age %>
    <%= f.number_field :age, {:class =>"form-control"}  %>
  </div>

  <div class="form-group field">
    <%= f.label :sex %>
    <%= f.text_field :sex, {:class =>"form-control"} %>
  </div>

  <div class="form-group field">
    <%= f.label :bio %>
    <%= f.text_area :bio, {:class =>"form-control"} %>
